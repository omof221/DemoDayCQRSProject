
@model List<DemoDayCQRSProject.CQRS.Results.CarResult.GetCarQueryResult>




<div class="container-fluid categories pb-5">
    <div class="container pb-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 800px;">
            <h1 class="display-5 text-capitalize mb-3">Müsait <span class="text-primary">Araçlarımız</span></h1>
            <p class="mb-0">
                Farklı ihtiyaçlara uygun araç kategorilerimizi inceleyin. Ekonomik, konforlu ve güvenilir araçlarla yolculuğunuzu keyifli hale getirin.
            </p>
        </div>
        <div class="categories-carousel owl-carousel wow fadeInUp" data-wow-delay="0.1s">
          
            
            
            
            @foreach (var item in Model.Take(4))
            {
            <div class="categories-item p-4">
                <div class="categories-item-inner">
                    <div class="categories-img rounded-top">
                        <img src="@item.CarImmageUrl" class="img-fluid w-100 rounded-top" alt="">
                    </div>
                    <div class="categories-content rounded-bottom p-4">
                        <h4>@item.CarBrand @item.CarModel</h4>
                        <div class="categories-review mb-4">
                            <div class="me-3">4.5 Puan</div>
                            <div class="d-flex justify-content-center text-secondary">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star text-body"></i>
                            </div>
                        </div>
                        <div class="mb-4">
                                <h4 class="bg-white text-primary rounded-pill py-2 px-4 mb-0">@item.CarPrice₺/Gün</h4>
                        </div>
                        <div class="row gy-2 gx-0 text-center mb-4">
                            <div class="col-4 border-end border-white">
                                <i class="fa fa-users text-dark"></i> <span class="text-body ms-1">@item.CarDoorCount</span>
                            </div>
                          
                            <div class="col-4">
                                <i class="fa fa-gas-pump text-dark"></i> <span class="text-body ms-1">@item.FuelType</span>
                            </div>
                         
                            <div class="col-4 border-end border-white">
                                <i class="fa fa-cogs text-dark"></i> <span class="text-body ms-1">@item.Gearbox</span>
                            </div>
                           @*  <div class="col-4">
                                <i class="fa fa-road text-dark"></i> <span class="text-body ms-1">@item.CarPrice</span>
                            </div> *@
                        </div>
                        <a href="#" class="btn btn-primary rounded-pill d-flex justify-content-center py-3">Book Now</a>
                    </div>
                </div>
            </div>
         }











        </div>
    </div>
</div>