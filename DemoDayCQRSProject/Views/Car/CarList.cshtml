@model List<DemoDayCQRSProject.CQRS.Results.CarResult.GetCarQueryResult>

@{
    ViewData["Title"] = "CarList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h3 class="mb-3">🚗 Araç Listesi</h3>

    <div class="table-responsive">
        <table class="table table-striped align-middle shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th>#</th>
                    <th>Fotoğraf</th>
                    <th>Araç Markası</th>
                    <th>Araç Modeli</th>
                    <th>Vites Türü</th>
                    <th>Kapı Sayısı</th>
                    <th>Günlük Fiyat</th>
                    <th>Yakıt Tipi</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CarId</td>
                        <td>
                            <img src="@item.CarImmageUrl" alt="Araç Fotoğrafı"
                                 style="width: 150px; height: 100px; object-fit: cover; border-radius: 8px; box-shadow: 0 2px 6px rgba(0,0,0,0.2);" />
                        </td>
                        <td><strong>@item.CarBrand</strong></td>
                        <td>@item.CarModel</td>
                        <td>@item.Gearbox</td>
                        <td>@item.CarDoorCount</td>
                        <td><span class="badge bg-success">@item.CarPrice ₺</span></td>
                        <td>@item.FuelType</td>
                        <td>
                            <a href="/Car/UpdateCar/@item.CarId" class="btn btn-sm btn-warning me-2">✏ Güncelle</a>
                            <a href="/Car/DeleteCar/@item.CarId" class="btn btn-sm btn-danger">🗑 Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a href="/Car/CreateCar/" class="btn btn-info">➕ Yeni Araç Girişi</a>
    </div>
</div>
