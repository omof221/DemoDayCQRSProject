@model DemoDayCQRSProject.CQRS.Results.ContactResult.ContactMessageResult
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["AdminInfo"] != null)
{
    <div class="alert alert-info">@TempData["AdminInfo"]</div>
}

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="mb-0">Mesaj Detayları</h4>
            <a class="btn btn-outline-secondary" href="@Url.Action("Index")">Mesaj Listesine Dön</a>
        </div>

        <dl class="row">
            <dt class="col-sm-3">Tarih</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</dd>

            <dt class="col-sm-3">İsim</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Telefon</dt>
            <dd class="col-sm-9">@Model.Phone</dd>

            <dt class="col-sm-3">Proje/dt>
            <dd class="col-sm-9">@Model.Project</dd>

            <dt class="col-sm-3">Konu</dt>
            <dd class="col-sm-9">@Model.Subject</dd>

            <dt class="col-sm-3">Messaj</dt>
            <dd class="col-sm-9"><pre class="mb-0" style="white-space: pre-wrap;">@Model.Body</pre></dd>

            <dt class="col-sm-3">AI Cevabı</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrWhiteSpace(Model.AiReplyPreview))
                {
                    <div class="p-3 bg-light rounded border">
                        <pre class="mb-0" style="white-space: pre-wrap;">@Model.AiReplyPreview</pre>
                    </div>
                }
                else
                {
                    <span class="text-muted">-</span>
                }
            </dd>

            <dt class="col-sm-3">AI Cevaplama Tarihi</dt>
            <dd class="col-sm-9">@Model.RepliedAt?.ToLocalTime().ToString("yyyy-MM-dd HH:mm") ?? "-"</dd>
        </dl>

        <!-- Örnek aksiyonlar -->
        <div class="d-flex gap-2">
            <form method="post" asp-action="MarkAsRead" asp-route-id="@Model.Id">
                <button type="submit" class="btn btn-success">Okundu Olarak İşaretle</button>
            </form>
            <a class="btn btn-outline-primary" href="mailto:@Model.Email?subject=@Uri.EscapeDataString("Re: " + Model.Subject)">Manuel Cevapla</a>
        </div>
    </div>
</div>
